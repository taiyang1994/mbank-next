.diesel-backdrop {
  position: fixed;
  z-index: 998;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .3);
}

.diesel-picker {
  background-color: #fff;
  position: relative;
  height: 272px;
  overflow: hidden;
  -webkit-user-select: none;
  user-select: none;
  box-sizing: border-box;
  list-style: none;
}

.diesel-picker, .diesel-dtpicker {
  .diesel-picker-mask-top,
  .diesel-picker-mask-bottom {
    position: absolute;
    left: 0;
    right: 0;
    z-index: 2;
  }

  .diesel-picker-mask-top {
    top: 0;
    height 85px;
    border-bottom: 1px solid #ececec;
    //background: linear-gradient(0deg, hsla(0,0%,100%,.4), hsla(0,0%,100%,.8))
  }
  .diesel-picker-mask-bottom {
    bottom: 0;
    height: 94px;
    border-top: 1px solid #ececec;
    //background: linear-gradient(180deg, hsla(0,0%,100%,.4), hsla(0,0%,100%,.8));
  }
}

.diesel-picker-inner {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.diesel-pciker-list,
.diesel-pciker-rule {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 36px;
  line-height: 36px;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -18px;
}
.diesel-pciker-rule-bg {
  z-index: 0;
}
.diesel-pciker-rule-ft {
  z-index: 2;
  border-top: solid 1px #eaeaea;
  border-bottom: solid 1px #eaeaea;
}

.diesel-pciker-list {
  z-index: 1;
  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
  -webkit-transform: perspective(100000px) rotateY(0deg) rotateX(0deg);
  transform: perspective(100000px) rotateY(0deg) rotateX(0deg);

  li {
    width: 100%;
    height: 100%;
    position: absolute;
    text-align: center;
    vertical-align: middle;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    overflow: hidden;
    box-sizing: border-box;
    font-size: 18px;
    color: #898989;
    padding: 0;
    white-space: nowrap;
    -webkit-text-overflow: ellipsis;
    text-overflow: ellipsis;
    cursor: default;
    visibility: hidden;
    list-style: none;

    &.highlight,
    &.visible {
      visibility: visible;
    }

    &.highlight {
      color: #333;
    }
  }
}

.diesel-poppicker {
  background: #fff;
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 999;
  -webkit-transition: .3s;
  transition: .3s;
  bottom: 0;
  -webkit-transform: translateY(300px);
  transform: translateY(300px);

  &.diesel-active {
    -webkit-transform: translateY(0px);
    transform: translateY(0px);
  }
}

.diesel-dtpicker-header,
.diesel-poppicker-header {
  height: 48px;
  line-height 48px
  font-size: 18px;
  color: #333;
  border-bottom: solid 1px #eaeaea;
  box-sizing: border-box;
  text-align: center;
  position: relative;

  .diesel-btn {
    font-size: 16px;
    height: 48px;
    background: 0;
    border: 0;
    color: #898989;
    display: inline-block;
    min-width 50px

    &.diesel-poppicker-btn-ok,
    &.diesel-dticker-btn-ok {
      color: #ef7d00;
      position: absolute;
      right: 17px;
      top: 0;
      padding 9px 0
      box-sizing border-box
      .diesel-btn-inner {
        width 50px
        height 30px
        line-height 30px
        text-align right
      }
      &:active {
        color #f2841d
      }
    }

    &.diesel-poppicker-btn-cancel,
    &.diesel-dticker-btn-cancel {
      height: 48px;
      line-height: 48px;
      position: absolute;
      top: 0;
      left: 17px;
      text-align: left;
      width: 50px;
    }

    &.diesel-dticker-btn-permanent {
      border: 1px solid #3264CC;
      border-radius: 2px;
      font-size: 13px;
      color: #3264CC;
      letter-spacing: 0;
      text-align: center;
      width: 74px;
      height: 26px;
      line-height: 24px;
      box-sizing border-box
      position: absolute;
      left: 50%;
      top: 50%;
      margin-left: -40px;
      margin-top: -13px;
    }
  }
}

.diesel-poppicker-clear {
  clear: both;
  height: 0;
  line-height: 0;
  font-size: 0;
  overflow: hidden;
}

.diesel-poppicker-body,
.diesel-dtpicker-body {
  position: relative;
  width: 100%;
  height: 215px;
  .diesel-picker {
    width: 100%;
    height: 100%;
    margin: 0;
    border: none;
    float: left;
    padding: 21px 13px 30px;
  }
}

.diesel-dtpicker {
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 999999;
  background-color: #fff;
  box-shadow: 0 -5px 7px 0 rgba(0, 0, 0, 0.1);
  -webkit-transition: .3s;
  bottom: 0;
  -webkit-transform: translateY(300px);
  .diesel-picker {
    width: 20%;
    height: 100%;
    margin: 0;
    float: left;
    border: none;
  }
}
.diesel-dtpicker.diesel-active {
  -webkit-transform: translateY(0);
}

.diesel-dtpicker-active-for-page {
  //overflow: hidden !important;
}

.diesel-dtpicker-body {
  position: relative;
  width: 100%;
  height: 215x;
}
.diesel-ios .diesel-dtpicker-body {
  -webkit-perspective: 1200px;
  perspective: 1200px;
  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
}
.diesel-dtpicker-title h5 {
  display: inline-block;
  width: 20%;
  margin: 0;
  padding: 8px;
  text-align: center;
  border-top: solid 1px #ddd;
  background-color: #f0f0f0;
  border-bottom: solid 1px #ccc;
}

[data-type="datetime"] .diesel-picker,
[data-type="time"] .diesel-dtpicker-title h5 {
  width: 20%;
}
[data-type="datetime"] [data-id="picker-h"],
[data-type="datetime"] [data-id="title-h"] {
  border-left: dotted 1px #ccc;
}
/*年月日*/

[data-type="date"] .diesel-picker,
[data-type="date"] .diesel-dtpicker-title h5 {
  width: 33.3%;
}
[data-type="date"] [data-id="picker-h"],
[data-type="date"] [data-id="picker-i"],
[data-type="date"] [data-id="title-h"],
[data-type="date"] [data-id="title-i"] {
  display: none;
}
/*年月日时*/

[data-type="hour"] .diesel-picker,
[data-type="hour"] .diesel-dtpicker-title h5 {
  width: 25%;
}
[data-type="hour"] [data-id="picker-i"],
[data-type="hour"] [data-id="title-i"] {
  display: none;
}
[data-type="hour"] [data-id="picker-h"],
[data-type="hour"] [data-id="title-h"] {
  border-left: dotted 1px #ccc;
}
/*时分*/

[data-type="time"] .diesel-picker,
[data-type="time"] .diesel-dtpicker-title h5 {
  width: 50%;
}
[data-type="time"] [data-id="picker-y"],
[data-type="time"] [data-id="picker-m"],
[data-type="time"] [data-id="picker-d"],
[data-type="time"] [data-id="title-y"],
[data-type="time"] [data-id="title-m"],
[data-type="time"] [data-id="title-d"] {
  display: none;
}
/*年月*/

[data-type="month"] .diesel-picker,
[data-type="month"] .diesel-dtpicker-title h5 {
  width: 50%;
}
[data-type="month"] [data-id="picker-d"],
[data-type="month"] [data-id="picker-h"],
[data-type="month"] [data-id="picker-i"],
[data-type="month"] [data-id="title-d"],
[data-type="month"] [data-id="title-h"],
[data-type="month"] [data-id="title-i"] {
  display: none;
}
